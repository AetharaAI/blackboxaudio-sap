# ─── Infrastructure Credentials ──────────────────────────────────────────────
# Copy to .env and CHANGE ALL PASSWORDS before deploying!

# Postgres
POSTGRES_USER=sap
POSTGRES_PASSWORD=CHANGE_ME_pg_secret
POSTGRES_DB=sap

# Valkey (Redis-compatible)
VALKEY_PASSWORD=CHANGE_ME_vk_secret

# MinIO (S3-compatible object storage)
MINIO_ROOT_USER=sapadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_minio_secret

# Hugging Face (for model downloads)
HF_TOKEN=

# Chatterbox TTS endpoint
CHATTERBOX_URL=https://tts.aetherpro.us

# General
LOG_LEVEL=INFO
SAMPLE_RATE=44100
